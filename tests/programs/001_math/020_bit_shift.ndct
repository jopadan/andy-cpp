--PROGRAM--
// Test for bitwise shift operations

// Left shift
let a = 0b0001;      // Binary: 0001
let b = a << 2;      // Binary: 0100 (1 shifted left by 2)
assert_eq(b, 0b0100);

// Right shift
let c = 0b1000;      // Binary: 1000
let d = c >> 3;      // Binary: 0001 (8 shifted right by 3)
assert_eq(d, 0b0001);

// Left shift with hexadecimal
let e = 0x1;         // Hex: 0x1
let f = e << 4;      // Hex: 0x10 (1 shifted left by 4)
assert_eq(f, 0x10);

// Right shift with larger numbers
let g = 0xF0;        // Hex: 0xF0 (Binary: 11110000)
let h = g >> 4;      // Hex: 0x0F (Binary: 00001111)
assert_eq(h, 0x0F);

print("ok");
--EXPECT--
ok
